{% extends 'GMPhototequeBundle::layout_GMPhototequeBundle.html.twig' %}

{% block app_main_content %}
    <div class="container">
        <h1 class="h1-app">Photo list</h1>
        <table class="table table-dark table-bordered table-hover table-sm">
            <caption>photo list</caption>
            <thead>
                <tr class="bg-info">
                    <th>Id</th>
                    <th>Guid</th>
                    <th>Create_date</th>
                    <th>Update_date</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
            {% for photo in photos %}
                <tr class="gm-clickable-row" data-href="{{ path('photo_show', { 'id': photo.id }) }}">
                    <td><a href="{{ path('photo_show', { 'id': photo.id }) }}">{{ photo.id }}</a></td>
                    <td>{{ photo.guid }}</td>
                    <td>{% if photo.createdate %}{{ photo.createdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if photo.updatedate %}{{ photo.updatedate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ photo.name }}</td>
                    <td>{{ photo.description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row">
            <div class="col">
                <a class="text-dark link-button-main" href="{{ path('photo_new') }}"><i class="fas fa-plus-square"></i> Add photo</a>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'GMPhototequeBundle::layout_GMPhototequeBundle.html.twig' %}

{% block app_main_content %}
    <div class="container">
        <h1 class="h1-app">Photo edit</h1>
        <div class="full-margin-m">
            {{ form_start(edit_form) }}
            <div class="row full-margin-m">
                <div class="col">
                    {{ form_label(edit_form.name, 'Name', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
                    {{ form_errors(edit_form.name)}}
                    {{ form_widget(edit_form.name, {'attr': {'class': 'input-app input-app-border', 'required':'true', 'autocomplete':'off'} }) }}
                </div>
            </div>
            <div class="row full-margin-m">
                <div class="col">
                    {{ form_label(edit_form.description, 'Description', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
                    {{ form_errors(edit_form.description) }}
                    {{ form_widget(edit_form.description, {'attr': {'class': 'text-input-app text-input-app-border'} }) }}
                </div>
            </div> 
            <div class="row margin-top-m">
                <div class="col">
                    <input class="btn btn-outline-info main-default-btn" type="submit" value="Save" />
                </div>
            </div>
            {{ form_end(edit_form) }}
            <div class="row margin-top-xs">

                {% if delete_form is defined %}
                    <div class="col">
                        {{ form_start(delete_form) }}
                            <input class="btn btn-outline-danger main-default-btn" type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </div>
                {% endif %}

                <div class="col">
                    <a class="float-right text-dark back-list-xl" href="{{ path('photo_index') }}">Go to the list
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

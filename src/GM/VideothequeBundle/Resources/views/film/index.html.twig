{% extends 'GMVideothequeBundle::layout.html.twig' %}

{% block app_main_content %}
    <div class="container">
        <h1 class="h1-app">Liste des films</h1>
        <table class="table table-dark table-bordered table-hover table-sm">
            <caption>Liste des films</caption>
            <thead>
                <tr class="bg-info">
                    <th>Id</th>
                    <th>Guid</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date_sortie</th>
                </tr>
            </thead>
            <tbody>
            {% for film in films %}
                <tr class="clickable-row" data-href="{{ path('film_show', { 'id': film.id }) }}">
                    <td><a href="{{ path('film_show', { 'id': film.id }) }}">{{ film.id }}</a></td>
                    <td>{{ film.guid }}</td>
                    <td>{{ film.titre }}</td>
                    <td>{{ film.description }}</td>
                    <td>{% if film.datesortie %}{{ film.datesortie|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row">
            <div class="col">
                <a class="text-dark create-action" href="{{ path('film_new') }}"><i class="fas fa-plus-square"></i> Ajouter une film</a>
            </div>
        </div>
    </div>
{% endblock %}

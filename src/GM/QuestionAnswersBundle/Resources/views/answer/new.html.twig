{% extends 'GMQuestionAnswersBundle::layout_GMQuestionAnswersBundle.html.twig' %}

{% block app_main_content %}
    <div class="container">
        <h1 class="h1-questionanswer">Answer creation</h1>
        <div class="safe-margin-action">
            {{ form_start(form) }}
            <div class="row safe-margin-action">
                <div class="col">
                    {{ form_label(form.wording, 'Answer', {'label_attr': {'class': 'label-questionanswer-xl'}}) }}
                    {{ form_errors(form.wording)}}
                    {{ form_widget(form.wording, {'attr': {'class': 'input-questionanswer input-questionanswer-border', 'required':'true', 'autocomplete':'off'} }) }}
                </div>
            </div>
            <div class="row safe-margin-action">
                <div class="col">
                    {{ form_label(form.question, 'Choose question associated : ', {'label_attr': {'class': 'sub-label-questionanswer-xl'}}) }}
                    {{ form_errors(form.question) }}
                    {{ form_widget(form.question, {'attr': {'placeholder': 'Choose question associated', 'class': 'select-input-questionanswer', 'required':'true'} }) }}
                </div>
            </div> 
            <div class="row margin-top-m">
                <div class="col">
                    <input class="btn btn-outline-info main-default-btn" type="submit" value="Save" />
                </div>
                <div class="col">
                    <a class="float-right text-dark back-list-xl" href="{{ path('answer_index') }}">Go to the list
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
